{
  "name": "{{cookiecutter.project_slug.upper()}}",
  "version": "{{cookiecutter.version}}",
  "description": "{{cookiecutter.project_description}}",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:debug": "vite --debug",
    "build": "run-p type-check \"build-only {@}\" --",
    "build-and-test": "run-p type-check \"test:unit\" \"build-only {@}\" --",
    "build-and-cov": "run-p type-check \"test:coverage\" \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage",
    "test:browser": "vitest --browser=chrome",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.9",
    "pinia": "^2.3.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.5",
    "@tailwindcss/postcss": "^4.0.9",
    "@tsconfig/node22": "^22.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.17.23",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^3.0.7",
    "@vitest/eslint-plugin": "1.1.20",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "chromedriver": "^123.0.4",
    "eslint": "^9.21.0",
    "eslint-plugin-oxlint": "^0.11.1",
    "eslint-plugin-vue": "^9.33.0",
    "geckodriver": "^4.5.1",
    "jsdom": "^25.0.1",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.11.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "vite": "^6.2.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^3.0.7",
    "vue-tsc": "^2.2.8"
  }
}
